<?xml version='1.0' encoding='utf-8'?>
<widget id="io.cordova.toorist" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>toorist</name>
    <description>
        An adventurous application for adventurous adventurers.
    </description>
    <author email="scottboyd27@hotmail.co.uk" href="http://cordova.io">
        Scott Boyd
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
        <string>We would like to know where you are to give you relevant information about your location.</string>
    </edit-config>
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <engine name="android" spec="^7.0.0" />
    <engine name="ios" spec="^4.5.4" />
</widget>
